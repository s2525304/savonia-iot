{
  "platform": {
    "apiRuntime": "node:18"
  },
  "routes": [
    {
      "route": "/.auth/*",
      "allowedRoles": ["anonymous"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["webui" ]
    },
    {
      "route": "/*",
      "allowedRoles": ["webui", "authenticated"]
    }
  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/.auth/*",
      "/*.css",
      "/*.js",
      "/*.map",
      "/*.json",
      "/*.png",
      "/*.jpg",
      "/*.jpeg",
      "/*.svg",
      "/*.ico",
      "/assets/*"
    ]
  },
  "responseOverrides": {
    "401": {
      "redirect": "/.auth/login/github",
      "statusCode": 302
    },
    "403": {
      "redirect": "/.auth/login/github",
      "statusCode": 302
    }
  }
}